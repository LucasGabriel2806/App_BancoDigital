<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_BancoDigital.View.Login">


        <ContentPage.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#B3E2FA" Offset="0.3" />
                <GradientStop Color="Blue" Offset="1.1" />
            </LinearGradientBrush>
        </ContentPage.Background>

        <ContentPage.Content>
            <StackLayout>
                <Frame CornerRadius="10"
                   x:Name="frm_login"
                   
                   HasShadow="False"
                   VerticalOptions="CenterAndExpand">
                    <StackLayout>
                        <Label Text="Login de Usuários"
                           TextTransform="Uppercase"
                           FontSize="Title"                           
                           HorizontalTextAlignment="Center" />

                        <Label Text="E-mail:" />
                        <Entry x:Name="txt_email"
                           TextColor="White"
                           Placeholder="Seu email de cadastro" />

                        <Label Text="Senha:" />
                        <Entry x:Name="txt_senha" Placeholder="Sua senha" IsPassword="True" />

                        <Button x:Name="btn_Entrar" Text="Entrar" Clicked="btn_Entrar_Clicked" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ContentPage.Content>


</ContentPage>